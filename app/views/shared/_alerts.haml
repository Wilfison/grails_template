- if alert
  .notification.alert.alert-danger.alert-dismissible.fade.show{role: 'alert'}
    = alert
    %button.btn-close{'aria-label': 'Close', 'data-bs-dismiss': 'alert', type: 'button'}

- if notice
  .notification.alert.alert-success.alert-dismissible.fade.show{role: 'alert'}
    = notice
    %button.btn-close{'aria-label': 'Close', 'data-bs-dismiss': 'alert', type: 'button'}
